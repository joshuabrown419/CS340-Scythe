<html>
<head>
    <title>Board Setup</title>
    <script src="/board.js" charset="utf-8" defer></script>
</head>
<body>
    <div class="page-title">Game Setups:</div>
    <table class="board-table">
        <thead>
            <tr>
                <th>Setup ID</th>
                <th>Expansions Used</th>
                <th>Board Used</th>
                <th>Build Score Tile</th>
                <th class="delete">Delete</th>
            </tr>
        </thead>
        <tbody id="boardTableBody">
            {{!-- board rows will be dynamically added here --}}
        </tbody>
    </table>

    <div class="page-title">Update Game Setup:</div>
    <table id="board-update">
        <th><input type="text" placeholder="Setup ID" id="update-setup-id"></th>
        <th>
            <select id="update-expansions" multiple>
                <option value="Invaders from Afar">Invaders from Afar</option>
                <option value="The Wind Gambit">The Wind Gambit</option>
                <option value="Scythe Encounters">Scythe Encounters</option>
                <option value="Rise of Fenris">Rise of Fenris</option>
            </select>
        </th>
        <th>
            <select id="update-board-used">
                <option value="Standard">Standard</option>
                <option value="Modular">Modular</option>
            </select>
        </th>
        <th>
            <select id="update-build-tile">
                <option value="0">none-selected</option>
                <option value="Tunnels next to buildings">Tunnels next to buildings</option>
                <option value="Lakes next to buildings">Lakes next to buildings</option>
                <option value="Encounters next to buildings">Encounters next to buildings</option>
                <option value="Buildings on Tunnels">Buildings on Tunnels</option>
                <option value="Buildings in a row">Buildings in a row</option>
                <option value="Buildings on farms/tundra">Buildings on farms/tundra</option>
                <option value="Buildings next to Home/Factory">Buildings next to Home/Factory</option>
                <option value="Buildings on Villages">Buildings on Villages</option>
                <option value="Buildings on Encounters">Buildings on Encounters</option>
                <option value="Buildings next to single lake">Buildings next to single lake</option>
                <option value="Buildings on mountains/forests">Buildings on mountains/forests</option>
                <option value="Buildings not adjacent">Buildings not adjacent</option>
                <option value="Buildings in diamond formation">Buildings in diamond formation</option>
                <option value="Buildings next to single encouter">Buildings next to single encouter</option>
            </select>
        </th>
        <th>
            <button onclick="updateBoardSetup()">Update!</button>
        </th>
    </table>
</body>